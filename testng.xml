<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite for Cross Browser Tests">
	<test name="Tests on Chrome Browser">
		<parameter name="browser" value="chrome" />
		<classes>
			<class
				name="tests.TestLoginLogout">
				<methods>
					<include name="testLoginPage" />
					<include name="testLogoutPage" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="Tests on Edge Browser">
		<parameter name="browser" value="edge" />
		<classes>
			<class
				name="tests.TestLoginLogout">
				<methods>
					<include name="testLoginPage" />
					<include name="testLogoutPage" />
				</methods>
			</class>
		</classes>
	</test>
</suite>
